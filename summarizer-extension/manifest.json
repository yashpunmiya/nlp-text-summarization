{
  "manifest_version": 3,
  "name": "Text Summarizer - Advanced NLP",
  "version": "1.0.0",
  "description": "Summarize selected text using advanced NLP techniques (TF-IDF, TextRank, LSA, Hybrid)",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
